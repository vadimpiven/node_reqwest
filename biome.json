{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "none"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true,
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": { "maxAllowedComplexity": 20 }
        },
        "noVoid": "error"
      },
      "correctness": {
        "recommended": true,
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "error",
        "useImportExtensions": "error"
      },
      "nursery": {
        "useExplicitType": "error"
      },
      "performance": {
        "recommended": true,
        "noAccumulatingSpread": "error",
        "noBarrelFile": "off",
        "noReExportAll": "off"
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "noDefaultExport": "off",
        "noNonNullAssertion": "off",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": true,
            "conventions": [
              {
                "selector": { "kind": "variable" },
                "formats": ["camelCase", "CONSTANT_CASE", "PascalCase"]
              },
              {
                "selector": { "kind": "function" },
                "formats": ["camelCase"]
              },
              {
                "selector": { "kind": "typeLike" },
                "formats": ["PascalCase"]
              },
              {
                "selector": { "kind": "objectLiteralProperty" },
                "formats": ["camelCase", "snake_case"]
              }
            ]
          }
        },
        "useBlockStatements": "error",
        "useShorthandFunctionType": "error"
      },
      "suspicious": {
        "recommended": true,
        "noConsole": "off",
        "noEvolvingTypes": "error",
        "noExplicitAny": "error"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**/*.{json,jsonc,js,mjs,ts,mts}"]
  }
}
