{
  "private": true,
  "name": "workspace",
  "type": "module",
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "pnpm": "^10.26.1",
    "node": "^22.21.1",
    "runtime": {
      "name": "node",
      "version": "^22.21.1",
      "onFail": "download"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@playwright/test": "catalog:",
    "@taplo/cli": "catalog:",
    "@types/node": "catalog:",
    "husky": "catalog:",
    "markdownlint-cli2": "catalog:"
  },
  "scripts": {
    "preinstall": "cargo binstall cargo-binstall cargo-run-bin -y --locked && cargo bin --install",
    "postinstall": "node scripts/setup-path.ts",
    "playwright": "pnpm exec playwright install-deps",
    "rustup": "rustup update && rustup toolchain install",
    "check:biome": "pnpm exec biome check . --log-level warn",
    "check:taplo": "pnpm exec taplo check",
    "check:markdownlint": "pnpm exec markdownlint-cli2",
    "check:clippy": "cargo clippy -r --locked -- -D warnings",
    "check:rustfmt": "cargo fmt --check",
    "check:zizmor": "cargo bin zizmor -q .github",
    "check:semgrep": "uv run --no-sync semgrep scan -q --error --strict",
    "check": "pnpm run check:biome && pnpm run check:taplo && pnpm run check:markdownlint && pnpm run check:clippy && pnpm run check:rustfmt && pnpm run check:zizmor",
    "fix:biome": "pnpm run check:biome --fix",
    "fix:taplo": "pnpm exec taplo format",
    "fix:markdownlint": "pnpm exec markdownlint-cli2 --fix",
    "fix:clippy": "cargo clippy -r --fix --allow-dirty",
    "fix:rustfmt": "cargo fmt",
    "fix:zizmor": "pnpm run check:zizmor",
    "fix:semgrep": "pnpm run check:semgrep --autofix",
    "fix": "pnpm run fix:biome && pnpm run fix:taplo && pnpm run fix:markdownlint && pnpm run fix:clippy && pnpm run fix:rustfmt && pnpm run fix:zizmor",
    "prepare": "husky",
    "check-updates:pnpm": "(pnpm outdated --recursive --sort-by name || exit 0)",
    "check-updates:cargo": "cargo update --breaking -Z unstable-options --dry-run",
    "check-updates:uv": "uv lock --upgrade --dry-run",
    "check-updates": "pnpm run check-updates:pnpm && pnpm run check-updates:cargo && pnpm run check-updates:uv",
    "update:pnpm": "pnpm update --recursive --workspace && pnpm audit --fix && pnpm install",
    "update:cargo": "cargo bin cargo-cache --autoclean && cargo clean && cargo update",
    "update:uv": "uv lock --upgrade",
    "update": "pnpm run update:pnpm && pnpm run update:cargo && pnpm run update:uv",
    "ci-build": "pnpm run --recursive ci-build",
    "preci-test": "pnpm run check",
    "ci-test": "pnpm run --recursive ci-test",
    "build": "pnpm run --recursive build",
    "pretest": "pnpm run fix",
    "test": "pnpm run --recursive test"
  },
  "dependencies": {}
}
