{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Unittest (TypeScript)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/node",
      "runtimeExecutable": "${workspaceRoot}/packages/node/node_modules/.bin/vitest",
      "args": ["--test-timeout=0"],
      "outputCapture": "std",
      "env": {
        "RUST_BACKTRACE": "1"
      }
    },
    {
      "name": "Debug Unittest (Rust, MacOS)",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/node",
      "program": "${workspaceFolder}/.path/node",
      "args": [
        "--inspect",
        "--trace-warnings",
        "--enable-source-maps",
        "${workspaceRoot}/packages/node/node_modules/vitest/dist/cli.js",
        "--test-timeout=0"
      ],
      "env": {
        "RUST_BACKTRACE": "1"
      }
    },
    {
      "name": "Debug Unittest (Rust, Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/node",
      "program": "${workspaceFolder}/.path/node.exe",
      "args": [
        "--inspect",
        "--trace-warnings",
        "--enable-source-maps",
        "${workspaceRoot}/packages/node/node_modules/vitest/dist/cli.js",
        "--test-timeout=0"
      ],
      "environment": [{ "name": "RUST_BACKTRACE", "value": "1" }],
      "symbolOptions": {
        "searchPaths": ["${workspaceFolder}/target/release"],
        "searchMicrosoftSymbolServer": false
      }
    },
    {
      "name": "Debug Unittest (Rust, Linux)",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/node",
      "program": "${workspaceFolder}/.path/node",
      "args": [
        "--inspect",
        "--trace-warnings",
        "--enable-source-maps",
        "${workspaceRoot}/packages/node/node_modules/vitest/dist/cli.js",
        "--test-timeout=0"
      ],
      "environment": [{ "name": "RUST_BACKTRACE", "value": "1" }]
    },
    {
      "name": "Debug Electron (TypeScript)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/packages/node/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/packages/node/node_modules/.bin/electron.cmd"
      },
      "args": ["--enable-logging", "${workspaceRoot}/packages/node/tests/playwright/main.ts"],
      "runtimeArgs": ["--trace-warnings", "--enable-source-maps"],
      "outputCapture": "std",
      "env": {
        "RUST_BACKTRACE": "1"
      }
    },
    {
      "name": "Debug Electron (Rust, MacOS)",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/packages/node/node_modules/electron/dist/Electron.app/Contents/MacOS/Electron",
      "args": [
        "--inspect",
        "--trace-warnings",
        "--enable-source-maps",
        "${workspaceRoot}/packages/node/tests/playwright/main.ts"
      ],
      "env": {
        "RUST_BACKTRACE": "1",
        "ELECTRON_ENABLE_LOGGING": "true",
        "ELECTRON_ENABLE_STACK_DUMPING": "true",
        "ELECTRON_RUN_AS_NODE": "",
        "ELECTRON_NO_ATTACH_CONSOLE": ""
      }
    },
    {
      "name": "Debug Electron (Rust, Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/packages/node/node_modules/electron/dist/electron.exe",
      "args": [
        "--inspect",
        "--trace-warnings",
        "--enable-source-maps",
        "${workspaceRoot}/packages/node/tests/playwright/main.ts"
      ],
      "environment": [
        { "name": "RUST_BACKTRACE", "value": "1" },
        { "name": "ELECTRON_ENABLE_LOGGING", "value": "true" },
        { "name": "ELECTRON_ENABLE_STACK_DUMPING", "value": "true" },
        { "name": "ELECTRON_RUN_AS_NODE", "value": "" },
        { "name": "ELECTRON_NO_ATTACH_CONSOLE", "value": "" }
      ],
      "symbolOptions": {
        "searchPaths": ["${workspaceFolder}/target/release"],
        "searchMicrosoftSymbolServer": false
      }
    },
    {
      "name": "Debug Electron (Rust, Linux)",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/packages/node/node_modules/electron/dist/electron",
      "args": [
        "--inspect",
        "--trace-warnings",
        "--enable-source-maps",
        "${workspaceRoot}/packages/node/tests/playwright/main.ts"
      ],
      "environment": [
        { "name": "RUST_BACKTRACE", "value": "1" },
        { "name": "ELECTRON_ENABLE_LOGGING", "value": "true" },
        { "name": "ELECTRON_ENABLE_STACK_DUMPING", "value": "true" },
        { "name": "ELECTRON_RUN_AS_NODE", "value": "" },
        { "name": "ELECTRON_NO_ATTACH_CONSOLE", "value": "" }
      ]
    }
  ]
}
